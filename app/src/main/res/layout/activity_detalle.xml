<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detalle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alexandercaballero.peliculas.MainActivity">

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imagenDetalle"

        android:layout_alignParentTop="true" />


    <TextView
        android:text="Película:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/_nombre"
        android:layout_below="@+id/imagenDetalle"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_blue_dark"
         />

    <TextView
        android:text="Descripcion:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/_nombre"
        android:textSize="16sp"
        android:textStyle="normal|bold"
        android:id="@+id/_descripcion" />

    <TextView
        android:text="Genero:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/_descripcion"
        android:textSize="16sp"
        android:id="@+id/_genero" />

    <TextView
        android:text="Clasificación:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/_genero"
        android:textSize="16sp"
        android:id="@+id/_calificacion" />

</RelativeLayout>